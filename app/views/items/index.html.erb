<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Sort title</th>
      <th>Creator</th>
      <th>Contributor</th>
      <th>Date created</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.type %></td>
        <%= item.title.each do |ti| %>
          <td><%= ti %></td>
        <% end %>
        <td><%= item.sort_title %></td>
        <%= item.creator.each do |cr| %>
          <td><%= cr %></td>
        <% end %>
        <td><%= item.contributor %></td>
        <td><%= item.date_created %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


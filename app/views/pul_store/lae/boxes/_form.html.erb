<%= form_for(@box, :html => {:class => "form form-horizontal"}) do |b| %>
  <% if @box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@box.errors.count, "error") %> prohibited this Box from being saved:</h2>
      <ul>
      <% @box.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- :full,
:tracking_number,
:shipped_date, # checkbox, stamp if set
:received_date, # checkbox, stamp if set
:barcode,
:error_note -->
  <%= render :partial => 'shared/lae/workflow_state', locals: {object: @box} %>
  <div class="control-group">
    <%= b.label :barcode, :class => 'control-label' %>
    <div class="controls">
      <%= b.text_field :barcode %>
    </div>
  </div>
  <div class="control-group">
    <%= b.label :error_note, :class => 'control-label' %>
    <div class="controls">
      <%= b.text_area :error_note %>
    </div>
  </div>
  <div class="control-group">
    <%= b.label :shipped_date, :class => 'control-label' %>
    <div class="controls">
      <%= b.text_field :shipped_date, :class => 'datepicker' %>
    </div>
  </div>
  <div class="control-group">
    <%= b.label :received_date, :class => 'control-label' %>
    <div class="controls">
      <%= b.text_field :received_date, :class => 'datepicker' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= b.label :full, "Full Box" %>
      <%= b.check_box :full, { class: 'checkbox' }, "true", "false" %>
    </div>
  </div>
  <div class="control-group actions">
    <%= b.submit :value => "Update Box", :class => 'btn btn-primary' %>
  </div>
<% end %>

  <% if(@box.folders.empty?) %>
    <h3>Create a Folder</h3>
  <% else %>
    <h3><span id="folder-count"><%= @box.folders.size %></span> Current Folders</h3>
  <% end %>

  <table class="table" id="folders-table">
    <thead>
      <tr>
        <th>Barcode</th>
        <th>Genre</th>
        <th>Width</th>
        <th>Height</th>
        <th>Pages</th>
        <th>Created</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
    <% @box.folders.sort_by {|f1| f1.date_uploaded }.each do |f| %>
      <tr>
        <td><%= f.barcode %></td>
        <td><%= f.genre %></td>
        <td><%= f.width_in_cm %></td>
        <td><%= f.height_in_cm %></td>
        <td><%= f.page_count %></td>
        <td><%= lae_folder_date_uploaded(f.date_uploaded) %></td>
        <td>
          <% if(@box.folders.size > 0) %>
            <% if can?(:edit, @box) %>
              <%= link_to "Edit Folder", edit_lae_folder_path(f.id), :class => "btn btn-info" %>
            <% end %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
  </table>






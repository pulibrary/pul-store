<% @folder = PulStore::Lae::Folder.new %>
<div class="well">
<%= form_for(@folder, remote: true ) do |f| %>
  <% if @folder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@folder.errors.count, "error") %> prohibited this Folder from being saved:</h2>
      <ul>
      <% @folder.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :barcode %><br>
    <%= f.text_field :barcode, class: 'barcode'  %>
  </div>
  <div class="field">
    <%= f.label "Folder Number" %><br>
    <%= f.text_field :physical_number %>
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.select(:genre, options_for_select(list_all_genres_as_select_list)) %>
  </div>
  <div id="extent-metadata">
    <!-- required metadata goes here -->
    <% PulStore::Lae::Folder::extent_elements.each do |e| %>
      <div class="field">
        <%= f.label e %><br/>
        <%= f.text_field e %>
      </div>
    <% end %>

    <%= f.hidden_field :box_id, :class => "field", :value => box.id %>

   <div class="actions">
      <%= f.submit :value => "Create Folder", :class => 'btn btn-primary' %>
      <button id="cancelButton" type="button" class="btn btn-inverse" data-dismiss="modal" aria-hidden="true" title="Close this screen without adding this Folder.">Cancel</button>
   </div>
<% end %>
</div>
